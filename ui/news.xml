<MOML version="1.1.5" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.applusform.com/xsd/moml_ui_1.1.5.xsd">
	<UILAYOUT portrait="320,460" landscape="320,460">
		<WEBVIEW id="web" layout="0,{userVariable.weby},320,{userVariable.webh}" src="{caller.homePage}" homePage="http://m.mafra.go.kr/bbs/list.jsp?board_division=b_sec_1&amp;menu_gubun=menu_1" controls="none">
			<LINKMAP baseUrl="">
				<LINK url="http://www.mafra.go.kr/" cmd="function.root.openWebbrowser" />
			</LINKMAP>
			<LINKMAP>
				<LINK url="*" onFinish="function.updateToolbar"/>
			</LINKMAP>
    </WEBVIEW>
		<LABEL id="navigationTitle" themeId="themeNavigationTitle" text="최신뉴스" onClick="">
			<BUTTON themeId="themeMenuBtn" />
		</LABEL>
		<WINDOW id="toolbar" layout="0,420,320,40" align="linear:horizontal|vCenter" defaultImg="/res/webbg.png">
			<BUTTON id="back" layout="30,30" margin="10,0,10,0" defaultImg="/res/webback.png" onClick="web.back" />
			<BUTTON id="forward" layout="30,30" margin="10,0,10,0" defaultImg="/res/webfor.png" onClick="web.forward" />
			<BUTTON layout="30,30" margin="10,0,10,0" defaultImg="/res/webrefresh.png" onClick="web.refresh" />
			<BUTTON layout="30,30" margin="10,0,10,0" defaultImg="/res/webhome.png" onClick="web.clear, web.src=web.homePage" />
		</WINDOW>
	</UILAYOUT>

  <CMD cmd="function.updateToolbar(web.homePage)" />

  <FUNCTION id="updateToolbar(url)">
    <CMD condition="string.find(url, web.homePage) != 0 ">
      <CMD condition="toolbar.visible == 'invisible'">
        <CMD cmd="toolbar.visible='visible'" />
        <CMD cmd="web.height=460 - web.top - 40" />
      </CMD>
      <ELSECMD condition="toolbar.visible == 'visible'">
        <CMD cmd="toolbar.visible='invisible'" />
        <CMD cmd="web.height=460 - web.top" />
      </ELSECMD>
    </CMD>

    <CMD cmd="back.visible=web.canBack" />
    <CMD cmd="forward.visible=web.canForward" />
  </FUNCTION>

</MOML>